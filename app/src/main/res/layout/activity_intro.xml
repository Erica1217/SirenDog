<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:padding="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dog" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:textColor="#2f5496"
            android:text="안전 지킴이 집이란?"
            android:textSize="24dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="363dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#2f5496"
        android:text="어린이 여러분! 도움이 필요할 때,
                           우리 동네에 있는 약국, 문구점, 24시 편의점이 아동안전지킴이집이 되어 어린이 여러분의
                    안전을 위하여 도와준답니다."
        android:textAlignment="center"
        android:textColor="#f9f9f9"
        android:textSize="18dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:orientation="horizontal"
        android:padding="30dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="135dp"
            android:layout_height="126dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_safe_house" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="232dp"
            android:layout_height="208dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_safe_tip" />
    </LinearLayout>

</LinearLayout>

